<div class="container-fluid">
    <div class="row  justify-content-center">
        <div class="col-4">
            <div class="alert alert-danger text-left clientsideLoginErrors" style="display: none">
                <div class="alert-heading errorHeading">Error</div>
            </div>
        </div>
    </div>
    {{#if fromCoursePage}}
        <div class="row second-row justify-content-center">
            <div class="col-4">
                <div class="alert alert-danger text-left">
                    <div class="alert-heading errorHeading">Error</div>
                    {{loginError}}
                </div>
            </div>
        </div>
    {{/if}}
</div>
{{!-- <div class="error alert alert-danger text-left justify-content-center">{{error}}</div> --}}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-6 text-left">
            <h1 class="display-4">Sign in</h1>
            <form id="loginForm" action="/login/result" method="POST">
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input id="email" type="text" class="form-control" name="email" aria-describedby="emailHelp"
                           placeholder="Enter email" />
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.
                        Privacy is of our utmost importance.</small>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input id="password" type="password" class="form-control" name="password" placeholder="password" />
                </div>
                <button type="submit" class="btn btn-primary align-center">Login</button>
            </form>
            <a href="/registration" class="btn btn-info register" role="button">Register</a>
        </div>
    </div>
</div>
